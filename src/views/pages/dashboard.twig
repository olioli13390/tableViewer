{% extends "../layout/base.twig" %}

{% block title %}
	<title>Dashboard</title>
{% endblock %}

{% block style %}
	<link rel="stylesheet" href="/assets/css/settings.css">
	<link rel="stylesheet" href="/assets/css/dashboard.css">
{% endblock %}

{% block main %}

	<main>
		<div class="dashboard-container">
			<div class="top-container">
				<div class="title">
					<h2>TableViewer</h2>
				</div>
				<div class="action-container">
					<form action="/uploadCsv" method="get">
						<button class="btn-normal">+ Upload CSV</button>
					</form>
					<form action="/addConnection" method="get">
						<button class="btn-normal">+ Connect to DB</button>
					</form>
				</div>
			</div>
			<div class="mid-container">

				<div class="nav-cards">
					<div class="infos-container">
						<h4 class="description">Welcome</h4>
						<p class="data">{{user.company_name}}</p>
						<p class="description">Membre depuis
							{{user.created_at}}</p>
					</div>
				</div>
				<div class="nav-cards">
					<div class="infos-container">
						<h4 class="description">Connect to</h4>
						<p class="data">Db name</p>
						<p class="description">Bla bla</p>
					</div>
				</div>
				<div class="nav-cards">
					<div class="infos-container">
						<h4 class="description">CSV</h4>
						<p class="data">12</p>
						<p class="description">Csv uploaded</p>
					</div>
				</div>
				<div class="nav-cards">
					<div class="infos-container">
						<h4 class="description">Results</h4>
						<p class="data">30</p>
						<p class="description">Charts or table generated</p>
					</div>
				</div>

			</div>
			<div class="bottom-container">
				<div class="recent-container">

					<div class="recent-title">
						<h4>Recent</h4>
						<a href="#">View all</a>
					</div>
					<div class="file-container">
						<div class="recent-card-container">
							<div class="recent-card">
								<p>Analyse CA</p>
								<p class="description">Format</p>
							</div>
							<div class="file-info">
								<p class="description">2d ago</p>
								<p class="description">Download</p>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="btn-generate">
				<a href="/generate" class="btn-normal">Generate</a>
			</div>
		</div>
	</main>
{% endblock %}

{% block script %}
	<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
	<script src="/js/toastify.js"></script>
	{% if toast %}
		<script>
			showToast("{{ toast.message|e('js') }}", "{{ toast.type }}");
		</script>
	{% endif %}
{% endblock %}
